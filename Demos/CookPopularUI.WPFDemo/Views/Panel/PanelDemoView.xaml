    <ScrollViewer Width="{StaticResource DemoViewWidth}">
        <StackPanel VerticalAlignment="Center">
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <ui:UniformSpacePanel Background="{x:Static SystemColors.ControlDarkBrush}"
                                      ItemHVSpace="20,0" ItemVerticalAlignment="Center" Orientation="Horizontal"
                                      UniformType="Every">
                    <Button Content="ChanceABC" />
                    <Button Content="ChanceDEF" />
                    <Button Content="ChanceXYZ" />
                </ui:UniformSpacePanel>
                <ui:UniformSpacePanel Background="{x:Static SystemColors.ControlDarkBrush}"
                                      Margin="20,0"
                                      ItemHVSpace="20,0" ItemVerticalAlignment="Center" Orientation="Horizontal"
                                      UniformType="Item">
                    <Button Content="ChanceABC" />
                    <Button Content="ChanceDEF" />
                    <Button Content="ChanceXYZ" />
                </ui:UniformSpacePanel>
            </StackPanel>

            <StackPanel Height="100"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                <ui:UniformSpacePanel Width="240"
                                      Background="{x:Static SystemColors.ControlDarkBrush}"
                                      ItemHVSpace="10" ItemVerticalAlignment="Center" ItemWidth="100"
                                      ItemWrapping="Wrap" Orientation="Horizontal" UniformType="Every">
                    <Button Content="Chance1" />
                    <Button Content="Chance2" />
                    <Button Content="Chance3" />
                    <Button Content="Chance4" />
                </ui:UniformSpacePanel>
                <ui:UniformSpacePanel Width="350"
                                      Background="{x:Static SystemColors.ControlDarkBrush}"
                                      Margin="20,0"
                                      ItemHVSpace="10" ItemVerticalAlignment="Center" ItemWidth="100"
                                      ItemWrapping="Wrap" Orientation="Horizontal" UniformType="Item">
                    <Button Content="Chance1" />
                    <Button Content="Chance2" />
                    <Button Content="Chance3" />
                    <Button Content="Chance4" />
                    <Button Content="Chance5" />
                    <Button Content="Chance6" />
                </ui:UniformSpacePanel>
            </StackPanel>

            <StackPanel Margin="0,10,0,0" HorizontalAlignment="Center" Orientation="Horizontal">
                <ui:UniformSpacePanel Width="140"
                                      Background="{x:Static SystemColors.ControlDarkBrush}"
                                      ItemHVSpace="0,10" ItemHorizontalAlignment="Center" ItemWidth="100"
                                      Orientation="Vertical" UniformType="Every">
                    <Button Content="ChanceABC" />
                    <Button Content="ChanceDEF" />
                    <Button Content="ChanceXYZ" />
                </ui:UniformSpacePanel>
                <ui:UniformSpacePanel Width="140"
                                      Background="{x:Static SystemColors.ControlDarkBrush}"
                                      Margin="20,0"
                                      ItemHorizontalAlignment="Center" ItemWidth="100" Orientation="Vertical"
                                      UniformType="Item">
                    <Button Content="ChanceABC" />
                    <Button Content="ChanceDEF" />
                    <Button Content="ChanceXYZ" />
                </ui:UniformSpacePanel>
                <ui:UniformSpacePanel Width="140"
                                      Background="{x:Static SystemColors.ControlDarkBrush}"
                                      Margin="20,0"
                                      ItemHorizontalAlignment="Center" ItemWidth="100" Orientation="Vertical"
                                      UniformType="OnlyItem">
                    <Button Content="ChanceABC" />
                    <Button Content="ChanceDEF" />
                    <Button Content="ChanceXYZ" />
                </ui:UniformSpacePanel>
            </StackPanel>

            <StackPanel Width="600"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Center"
                        Orientation="Vertical">
                <ui:UniformSpacePanel Background="{x:Static SystemColors.ControlDarkBrush}"
                                      ItemVerticalAlignment="Center" ItemWidth="100" Orientation="Horizontal"
                                      UniformType="Every">
                    <Button Content="ChanceABC" />
                    <Button Content="ChanceDEF" />
                    <Button Content="ChanceXYZ" />
                </ui:UniformSpacePanel>
                <ui:UniformSpacePanel Background="{x:Static SystemColors.ControlDarkBrush}"
                                      Margin="0,10"
                                      ItemVerticalAlignment="Center" ItemWidth="100" Orientation="Horizontal"
                                      UniformType="Item">
                    <Button Content="ChanceABC" />
                    <Button Content="ChanceDEF" />
                    <Button Content="ChanceXYZ" />
                </ui:UniformSpacePanel>
                <ui:UniformSpacePanel Background="{x:Static SystemColors.ControlDarkBrush}"
                                      ItemHorizontalAlignment="Left" ItemVerticalAlignment="Center" ItemWidth="100"
                                      Orientation="Horizontal" UniformType="OnlyItem">
                    <Button Content="ChanceABC" />
                    <Button Content="ChanceDEF" />
                    <Button Content="ChanceXYZ" />
                </ui:UniformSpacePanel>
            </StackPanel>

            <StackPanel Margin="0,10,0,0" Orientation="Vertical">
                <ui:UniformSpacePanel Width="300" Height="100"
                                      Background="{x:Static SystemColors.ControlDarkBrush}"
                                      ItemHVSpace="10" ItemHorizontalAlignment="Center" ItemWidth="100"
                                      ItemWrapping="Wrap" Orientation="Vertical" UniformType="Every">
                    <Button Content="Chance1" />
                    <Button Content="Chance2" />
                    <Button Content="Chance3" />
                    <Button Content="Chance4" />
                </ui:UniformSpacePanel>
                <ui:UniformSpacePanel Width="300" Height="150"
                                      Background="{x:Static SystemColors.ControlDarkBrush}"
                                      Margin="0,10,0,0"
                                      ItemHVSpace="10" ItemHorizontalAlignment="Center" ItemWidth="100"
                                      ItemWrapping="Wrap" Orientation="Vertical" UniformType="Item">
                    <Button Content="Chance1" />
                    <Button Content="Chance2" />
                    <Button Content="Chance3" />
                    <Button Content="Chance4" />
                    <Button Content="Chance5" />
                    <Button Content="Chance6" />
                </ui:UniformSpacePanel>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>

</UserControl>
